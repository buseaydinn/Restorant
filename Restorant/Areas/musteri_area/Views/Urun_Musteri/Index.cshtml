
<div id="menu-page" class="page-hero-section division">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="hero-txt text-center white-color">
                    <div id="breadcrumb">
                        <div class="row">
                            <div class="col">
                                <div class="breadcrumb-nav">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="Musteri1">Anasayfa</a></li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                     </div>
                    <h2 class="h2-xl">Ürünler</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<section id="menu-8" class="wide-70 menu-section division">
    <div class="container">
        <div id="tabs-content">
            <div id="tab-1" class="tab-content current">
                <div class="row">
                    @foreach (var urun in ViewBag.Urunler)
                    {
                        <div class="col-sm-6 col-lg-3">
                            <div class="menu-7-item">
                                <div class="menu-7-img rel">
                                    <h5 class="h5-xs yellow-color">@urun.Id</h5>
                                    <img class="img-fluid" src="~/img/@urun.Fotograf" alt="menu-image" />
                                    <div class="menu-7-price bg-coffee">
                                        <h5 class="h5-xs yellow-color">@urun.Fiyat ₺</h5>
                                    
                                    </div>
                                    <div class="item-rating">
                                        <div class="stars-rating stars-lg">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star-half-alt"></i>
                                        </div>
                                    </div>
                                    <div class="like-ico ico-20">
                                        <a href="#"><span class="flaticon-heart"></span></a>
                                    </div>
                                </div>
                                <div class="menu-7-txt rel">

                                    <h5 class="h5-sm">@urun.Ad</h5>

                                    <p class="grey-color">@urun.Acıklama</p>

                                    <a asp-controller="Sepet" asp-action="Index" class="btn btn-sm btn-tra-grey yellow-hover"> SİPARİŞ VER<span class="flaticon-shopping-bag"></span></a>

                                </div>
                            </div>
                        </div>
                       }
                </div>
            </div>
        </div>
    </div>	
</section>

  
