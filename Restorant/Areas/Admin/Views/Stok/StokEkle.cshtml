@model Stok
<div class="content-body default-height">
    <div class="container-fluid">
        <form asp-controller="Stok" asp-action="StokEkle" method="post" novalidate>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"><i class="fa-duotone fa-arrow-trend-up"></i> Stok Ekleme Sayfası</h4>

                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="Miktar">Miktar</label>
                                            <div class="col-lg-8">
                                                <input asp-for="Miktar" type="text" class="form-control" id="Ad" placeholder="Miktar  gir">
                                                <span asp-validation-for="Miktar" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="MinStok">MinStok</label>
                                            <div class="col-lg-8">
                                                <input asp-for="MinStok" type="text" class="form-control" id="Aciklama" placeholder="Minimum Stok giriniz">
                                                <span asp-validation-for="MinStok" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="MaxStok">MaxStok</label>
                                            <div class="col-lg-8">
                                                <input asp-for="MaxStok" type="text" class="form-control" id="Fiyat" placeholder="Maximum Stok giriniz">
                                                <span asp-validation-for="MaxStok" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom05">
                                                Tedarikçi  Seç
                                                <span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-8">
                                                <select asp-for="TedarikciId" class="default-select wide form-control" id="validationCustom05">
                                                    <option data-display="Select">Tedarikçi seçiniz</option>
                                                    @foreach (var tedarikci in ViewBag.Tedarikci)
                                                    {
                                                        <option value="@tedarikci.Id">@tedarikci.AdSoyad</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <button type="submit" class="btn me-2 btn-primary">Gönder</button>
                                                <button type="button" class="btn btn-danger light" onclick="window.history.back();">İptal Etmek</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
