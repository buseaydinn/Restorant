@model List<StokGirdi>

<div class="content-body default-height">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><i class="fa-duotone fa-bags-shopping"></i> Stok Listesi</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>Id </th>
                                    <th>Malzeme Ad </th>
                                    <th>Miktar </th>
                                    <th>Tarih </th>
                                    <th>Tedarikçi </th>
                                    <th>Son Stok </th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stok in Model)
                                {
                                    <tr>
                                        <td>@stok.Id</td>
                                        <td>@stok.Malzeme.Ad</td>
                                        <td>@stok.Miktar</td>
                                        <td>@stok.Tarih</td>
                                        <td>@stok.Tedarikci.AdSoyad</td>
                                        <td>@stok.SonStok</td>

                                        <td>

                                            <div style="display: flex; align-items: center;">
                                                <a asp-action="StokSil" asp-route-id="@stok.Id" class="btn btn-danger btn-sm rounded-circle me-2">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a asp-controller="StokGuncelle" asp-action="StokGuncelle" asp-route-id="@stok.Id" class="btn btn-success btn-sm rounded-circle me-2">
                                                    <i class="fas fa-sync-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div id="example3_paginate" class="dataTables_paginate paging_simple_numbers">
                                <!-- Sayfalama düğmeleri buraya gelecek -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

