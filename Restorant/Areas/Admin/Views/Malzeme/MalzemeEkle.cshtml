@model Malzeme

<div class="content-body default-height ">
    <div class="container-fluid">
        <form asp-controller="Malzeme" asp-action="MalzemeEkle" method="post" novalidate>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Malzeme Ekleme Sayfası</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom01">
                                                Malzeme Adı
                                            </label>
                                            <div class="col-lg-6">
                                                <input asp-for="Ad" type="text" class="form-control" id="validationCustom01"
                                                       placeholder="Malzeme Adını gir">
                                                <span asp-validation-for="Ad" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom01">
                                                Malzeme Tür
                                                <span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input asp-for="Turu" type="text" class="form-control" id="validationCustom01"
                                                       placeholder="Malzeme türünü gir">
                                                <span asp-validation-for="Turu" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom01">
                                                Malzeme Fiyat
                                                <span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <input asp-for="Fiyat" type="text" class="form-control" id="validationCustom01"
                                                       placeholder="Malzeme fiyatını  gir">
                                                <span asp-validation-for="Fiyat" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="basic-form">
                                            <button type="submit" class="btn me-2 btn-primary">Gönder</button>
                                            <button type="submit" class="btn btn-danger light">İptal Etmek</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
