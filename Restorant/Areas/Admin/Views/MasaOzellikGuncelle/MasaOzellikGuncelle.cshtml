@model Ozellik

<div class="content-body default-height">
    <div class="container-fluid">
        <form asp-controller="MasaOzellikGuncelle" asp-action="MasaOzellikGuncelle" method="post" novalidate>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"><i class="fa-duotone fa-person"></i> Masa Özelliği Güncelleme Sayfası</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">

                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom01">Özellik Adı</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Ad" type="text" class="form-control" id="Ad" placeholder="Özellik Adı Gir">
                                                <span asp-validation-for="Ad" class="text-danger"></span>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </div>

                            <div class="basic-form">
                                <button type="submit" class="btn me-2 btn-primary">Gönder</button>
                                <button type="submit" class="btn btn-danger light">İptal Etmek</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>





