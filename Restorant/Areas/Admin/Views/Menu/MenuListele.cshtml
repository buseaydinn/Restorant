@model IEnumerable<Menu>

<div class="content-body default-height">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><i class="fa-regular fa-book-open-reader"></i> Menü Listesi</h4>

                </div>
                <div class="row">
                    @foreach (var menu in Model)
                    {
                        <div class="col-lg-12 col-xxl-4 col-xl-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row m-b-30">
                                        <div class="col-md-5 col-xxl-12" style="text-align: center;">
                                            <div class="new-arrival-product mb-4 mb-xxl-4 mb-md-0">
                                                <div class="new-arrivals-img-contnent">
                                                    <img src="~/img/@menu.Fotograf" alt="Fotograf" style="max-width: 100px; max-height: 100px; border-radius: 50%;">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-7 col-xxl-12">
                                            <div class="new-arrival-content position-relative">
                                                <h4 class="text-center"><a href="#">@menu.Ad</a></h4>
                                                <div class="comment-review star-rating">
                                                    <p>
                                                        Stok Durumu <span class="item">
                                                            @menu.Gorunurluk   <i class="fa fa-check-circle text-success"></i>
                                                        </span>
                                                    </p>
                                                    <p style="margin-bottom: 0;">Menü Fiyatı: <span class="item">@menu.Fiyat</span> ₺</p>

                                                    <p style="margin-bottom: 0;">Menü Detay: <span class="item">@menu.Aciklama</span></p>
                                                    <p>Katagori <span class="item">@menu.Kategori.Ad</span> </p>

                                                    <p>
                                                        @if (menu.menuurunler != null && menu.menuurunler.Any())
                                                        {
                                                            var urunListesi = menu.menuurunler
                                                                                      .Where(m => m.Urun != null)
                                                                                      .Select(m => m.Urun.Ad);
                                                            <span>Malzeme: @string.Join(", ", urunListesi)</span>
                                                        }
                                                    </p>

                                                    <div style="display: flex; align-items: center;">
                                                        <a asp-action="MenuSil" asp-route-id="@menu.Id" class="btn btn-danger btn-sm rounded-circle me-2">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                        <a asp-controller="MenuGuncelle" asp-action="MenuGuncelle" asp-route-id="@menu.Id" class="btn btn-success btn-sm rounded-circle me-2">
                                                            <i class="fas fa-sync-alt"></i>
                                                        </a>

                                                        <a asp-controller="MenuIndirim" asp-action="MenuIndirimEkle" asp-route-id="@menu.Id" class="btn btn-warning btn-sm rounded-circle me-2">
                                                            <i class="fas fa-money-bill-alt"></i>
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                                                   
                       
                      }
                </div>
            </div>
        </div>
    </div>
</div>
