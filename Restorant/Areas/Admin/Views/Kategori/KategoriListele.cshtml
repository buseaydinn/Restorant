@model IEnumerable<Kategori>

<div class="content-body default-height">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><i class="fa-duotone fa-list"></i> Kategori Listesi</h4>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>Id </th>                     
                                    <th>Ad</th>
                                    <th>Tür</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kategori in Model)
                                {
                                    <tr>
                                        <td>@kategori.Id</td>
                                        <td>@kategori.Ad</td>
                                        <td>@kategori.Tur</td>
                                        <td>
                                            <div style="display: flex; align-items: center;">
                                                <a asp-action="KategoriSil" asp-route-id="@kategori.Id" class="btn btn-danger btn-sm rounded-circle me-2">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a asp-controller="KategoriGuncelle" asp-action="KategoriGuncelle" asp-route-id="@kategori.Id" class="btn btn-success btn-sm rounded-circle me-2">
                                                    <i class="fas fa-sync-alt"></i>
                                                </a>
                                            </div>

                                        </td>



                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div id="example3_paginate" class="dataTables_paginate paging_simple_numbers">
                                <!-- Sayfalama düğmeleri buraya gelecek -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
