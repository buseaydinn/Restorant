@model IEnumerable<Urun>

<div class="content-body default-height">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><i class="fa-solid fa-burger"></i> Ürün Listesi</h4>

                </div>
                <div class="row">
                    @foreach (var urun in Model)
                    {
                        <div class="col-lg-12 col-xxl-4 col-xl-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row m-b-30">
                                        <div class="col-md-5 col-xxl-12">
                                            <div class="new-arrival-product mb-4 mb-xxl-4 mb-md-0">
                                                <div class="new-arrivals-img-contnent">
                                                    <img src="~/img/@urun.Fotograf" alt="Fotograf" style="max-width: 100px; max-height: 100px; border-radius: 50%;">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-7 col-xxl-12">
                                            <div class="new-arrival-content position-relative">
                                                <h4 class="text-center"><a href="#">@urun.Ad</a></h4>
                                                <div class="comment-review star-rating">
                                                    <p>
                                                        Stok Durumu <span class="item">
                                                            @urun.Gorunurluk   <i class="fa fa-check-circle text-success"></i>
                                                        </span>
                                                    </p>
                                                    <p style="margin-bottom: 0;">Ürün Fiyatı: <span class="item">@urun.Fiyat</span> ₺</p>
                                                    <p style="margin-bottom: 0;">Ürün Detay: <span class="item">@urun.Detay</span></p>
                                                    <p>Katagori <span class="item">@urun.Kategori.Ad</span> </p>
                                                    <div style="display: flex; align-items: center;">
                                                        <a asp-action="UrunSil" asp-route-id="@urun.Id" class="btn btn-danger btn-sm rounded-circle me-2">
                                                            <i class="fa fa-trash"></i>
                                                        </a>
                                                        <a asp-controller="UrunGuncelle" asp-action="UrunGuncelle" asp-route-id="@urun.Id" class="btn btn-success btn-sm rounded-circle me-2">
                                                            <i class="fas fa-sync-alt"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
