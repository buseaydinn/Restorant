@model IEnumerable<Tedarikci>

<div class="content-body default-height">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><i class="fa-regular fa-truck-field"></i> Tedarikçi Listesi</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>Id </th>
                                    <th>Ad Soyad </th>
                                    <th>Firma Ad</th>
                                    <th>Adres</th>
                                    <th>Telefon</th>
                                    <th>Eposta</th>
                                    <th>İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var personel in Model)
                                {
                                    <tr>
                                        <td>@personel.Id</td>
                                        <td>@personel.AdSoyad</td>
                                        <td>@personel.Firma</td>
                                        <td>@personel.Adres</td>
                                        <td>@personel.Telefon</td>
                                        <td>@personel.Eposta</td>
                                        <td>
                                            <div style="display: flex; align-items: center;">
                                                <a asp-action="TedarikciSil" asp-route-id="@personel.Id" class="btn btn-danger btn-sm rounded-circle me-2">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a asp-controller="TedarikciGuncelle" asp-action="TedarikciGuncelle" asp-route-id="@personel.Id" class="btn btn-success btn-sm rounded-circle me-2">
                                                    <i class="fas fa-sync-alt"></i>
                                                </a>
                                            </div>

                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div id="example3_paginate" class="dataTables_paginate paging_simple_numbers">
                                <!-- Sayfalama düğmeleri buraya gelecek -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

