@model Tedarikci

<div class="content-body default-height">
    <div class="container-fluid">
        <form asp-controller="Tedarikci" asp-action="TedarikciEkle" method="post" novalidate>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Tedarikçi Ekleme Sayfası</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="AdSoyad">Tedarikçi Adı</label>
                                            <div class="col-lg-6">
                                                <input asp-for="AdSoyad" type="text" class="form-control" id="AdSoyad" placeholder="Tedarikçi Adını gir">
                                                <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="FirmaAd">Tedarikçi Firma Adı</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Firma" type="text" class="form-control" id="FirmaAd" placeholder="Tedarikçi Firma adı gir">
                                                <span asp-validation-for="Firma" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="FirmaAd">Tedarikçi Telefon</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Telefon" type="text" class="form-control" id="FirmaAd" placeholder="Tedarikçi Telefonu gir">
                                                <span asp-validation-for="Telefon" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="Adres">Tedarikçi Adres</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Adres" type="text" class="form-control" id="Adres" placeholder="Adres Detayı">
                                                <span asp-validation-for="Adres" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="Adres">Tedarikçi Eposta</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Eposta" type="text" class="form-control" id="Adres" placeholder="Eposta Detayı">
                                                <span asp-validation-for="Eposta" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Gönder</button>
                            <button type="reset" class="btn btn-danger">İptal</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
