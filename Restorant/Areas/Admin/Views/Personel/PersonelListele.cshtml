@model IEnumerable<Personel>

<div class="content-body default-height">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><i class="fa-light fa-users"></i> Personel Listesi</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>Id </th>
                                    <th>Fotoğraf </th>
                                    <th>Ad Soyad</th>
                                    <th>E posta</th>
                                    <th>Maaş</th>
                                    <th>Doğum Tarihi</th>
                                    <th>Başlama Tarihi</th>
                                    <th>Cinsiyet</th>
                                    <th>Şifre</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var personel in Model)
                                { 
                                    <tr>
                                        <td>@personel.Id</td>
                                        <td>@personel.Fotograf</td>
                                        <td>@personel.Ad @personel.Soyad</td>
                                        <td>@personel.Eposta</td>
                                        <td>@personel.Maas</td>
                                        <td>@personel.DogumTarihi</td>
                                        <td>@personel.BaslamaTarihi</td>
                                        <td>@personel.Cinsiyet</td>
                                        <td>@personel.Sifre</td>
                                        <td>
                                            <div style="display: flex; align-items: center;">
                                                <a asp-action="PersonelSil" asp-route-id="@personel.Id" class="btn btn-danger btn-sm rounded-circle me-2">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a asp-controller="PersonelGuncelle" asp-action="PersonelGuncelle" asp-route-id="@personel.Id" class="btn btn-success btn-sm rounded-circle me-2">
                                                    <i class="fas fa-sync-alt"></i>
                                                </a>
                                            </div>

                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div id="example3_paginate" class="dataTables_paginate paging_simple_numbers">
                                <!-- Sayfalama düğmeleri buraya gelecek -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
