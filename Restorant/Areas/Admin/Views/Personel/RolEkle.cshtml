@model Rol

<div class="content-body default-height">
    <div class="container-fluid">
        <form asp-controller="Personel" asp-action="RolEkle" method="post" novalidate>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"><i class="fa-light fa-people-arrows"></i> Rol Ekleme Sayfası</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="Ad">
                                                Rol Adı
                                            </label>
                                            <div class="col-lg-6">
                                                <input asp-for="Ad" type="text" class="form-control" id="Ad"
                                                       placeholder="Rol Adını gir">
                                                <span asp-validation-for="Ad" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                            <input asp-for="EklenmeTarihi" type="hidden" class="form-control" value=@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss") required="">

                                      
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <button type="submit" class="btn me-2 btn-primary">Gönder</button>
                                                <button type="button" class="btn btn-danger light" onclick="window.history.back();">İptal Et</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
