@model Musteri

<div class="content-body default-height">
    <div class="container-fluid">
        <form asp-controller="Musteri" asp-action="MusteriEkle" method="post" novalidate>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"><i class="fa-duotone fa-person"></i> Müşteri Ekleme Sayfası</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="Ad">Müşteri Adı</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Ad" type="text" class="form-control" id="Ad" placeholder="Adını gir">
                                                <span asp-validation-for="Ad" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="Soyad">Müşteri Soyadı</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Soyad" type="text" class="form-control" id="Soyad" placeholder="Soyadını gir">
                                                <span asp-validation-for="Soyad" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="Eposta">Müşteri E-posta</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Eposta" type="email" class="form-control" id="Eposta" placeholder="E-posta gir">
                                                <span asp-validation-for="Eposta" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="Telefon">Müşteri Telefon</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Telefon" type="tel" class="form-control" id="Telefon" placeholder="Telefon numarasını gir">
                                                <span asp-validation-for="Telefon" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="Dogumtarihi">Doğum Tarihi</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Dogumtarihi" type="date" class="form-control" id="Dogumtarihi" placeholder="Doğum Tarihini giriniz" required>
                                                <span asp-validation-for="Dogumtarihi" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <input asp-for="KayitTarihi" type="hidden" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" required>

                                        <div class="col-xl-12">
                                            <br />
                                            <button type="submit" class="btn me-2 btn-primary">Gönder</button>
                                            <button type="submit" class="btn btn-danger light">İptal Et</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
