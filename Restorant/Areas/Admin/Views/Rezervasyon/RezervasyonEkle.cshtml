@model MasaRezervasyon

<div class="content-body default-height">
    <div class="container-fluid">
        <form asp-controller="Rezervasyon" asp-action="RezervasyonEkle" method="post" novalidate>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"><i class="fa-duotone fa-person"></i> Rezervasyon Ekleme Sayfası</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom02">Kişi sayısı</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Rezervasyon.KisiSayisi" type="number" class="form-control" id="KisiSayisi" placeholder="Kişi sayısı seçiniz">
                                                <span asp-validation-for="Rezervasyon.KisiSayisi" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom01">Rezervasyon Tarihi</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Rezervasyon.Tarih" type="date" class="form-control" id="RezervasyonTarihi" placeholder="Rezervasyon Tarihi">
                                                <span asp-validation-for="Rezervasyon.Tarih" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom02">Başlangıç Saati</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Rezervasyon.BaslangicSaati" type="time" class="form-control" id="BaslangicSaati" placeholder="Başlangıç Saati seçiniz">
                                                <span asp-validation-for="Rezervasyon.BaslangicSaati" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom02">Bitiş Saati</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Rezervasyon.BitisSaati" type="time" class="form-control" id="BitisSaati" placeholder="Bitiş Saati seçiniz">
                                                <span asp-validation-for="Rezervasyon.BitisSaati" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom05">Masa seç</label>
                                            <div class="col-lg-6">
                                                <select asp-for="MasaId" class="default-select wide form-control" id="MasaId">
                                                    <option value="">Masa seçiniz</option>
                                                    @foreach (var masa in ViewBag.Masalar)
                                                    {
                                                        <option value="@masa.Id">@masa.Kod</option>
                                                    }
                                                </select>
                                                <span asp-validation-for="MasaId" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <input asp-for="Rezervasyon.TalepTarihi" type="hidden" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")">

                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom05">Rezervasyon Talep</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Rezervasyon.Talep" type="text" class="form-control" id="RezervasyonTalep" placeholder="Rezervasyon Talep" required>
                                                <span asp-validation-for="Rezervasyon.Talep" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <input asp-for="Rezervasyon.Onay" type="hidden" class="form-control" value="true" required>


                                        <div class="col-xl-12">
                                            <br />
                                            <button type="submit" class="btn me-2 btn-primary">Gönder</button>
                                            <button type="submit" class="btn btn-danger light">İptal Etmek</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
