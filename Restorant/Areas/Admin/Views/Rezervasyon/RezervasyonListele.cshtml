
@model IEnumerable<MasaRezervasyon>

<div class="content-body default-height">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><i class="fa-light fa-users"></i> Rezervasyon Listesi</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>Id </th>
                                    <th>Kişi </th>
                                    <th> Tarihi</th>
                                    <th> Baş. Saat</th>
                                    <th> Biti. Saat</th>
                                    <th>Masa </th>
                                    <th>Talep Tarihi</th>
                                    <th>Talep</th>
                                    @*<th>Onay </th>*@
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var masaRezervasyon in Model)
                                {
                                    <tr>
                                        <td>@masaRezervasyon.Id</td>
                                        
                                        
                                        <td>@masaRezervasyon.Rezervasyon.KisiSayisi</td>
                                        <td>@masaRezervasyon.Rezervasyon.Tarih</td>
                                        <td>@masaRezervasyon.Rezervasyon.BaslangicSaati</td>
                                        <td>@masaRezervasyon.Rezervasyon.BitisSaati</td>
                                        <td>@masaRezervasyon.MasaId</td>
                                        <td>@masaRezervasyon.Rezervasyon.TalepTarihi</td>
                                        <td>@masaRezervasyon.Rezervasyon.Talep</td>
                                        @*<td>@masaRezervasyon.Rezervasyon.Onay</td>*@
                                        <td>
                                            <div style="display: flex; align-items: center;">
                                                <a asp-action="RezervasyonSil" asp-route-id="@masaRezervasyon.Id" class="btn btn-danger btn-sm rounded-circle me-2">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a asp-controller="RezervasyonGuncelle" asp-action="RezervasyonGuncelle" asp-route-id="@masaRezervasyon.Id" class="btn btn-success btn-sm rounded-circle me-2">
                                                    <i class="fas fa-sync-alt"></i>
                                                </a>

                                            </div>

                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div id="example3_paginate" class="dataTables_paginate paging_simple_numbers">
                                <!-- Sayfalama düğmeleri buraya gelecek -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
