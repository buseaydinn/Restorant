@model Kategori

<div class="content-body default-height ">
    <div class="container-fluid">
        <form asp-controller="KategoriGuncelle" asp-action="KategoriGuncelle" enctype="multipart/form-data" method="post" novalidate>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"><i class="fa-duotone fa-list"></i> Kategori Güncelleme Sayfası</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom01">
                                                Kategori Adı
                                            </label>
                                            <div class="col-lg-6">
                                                <input asp-for="Ad" type="text" class="form-control" id="validationCustom01"
                                                       placeholder="Kategori Adını gir">
                                                <span asp-validation-for="Ad" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label" for="validationCustom05">
                                                Kategori Tür Seç
                                                <span class="text-danger"></span>
                                            </label>
                                            <div class="col-lg-6">
                                                <select asp-for="Tur" class="default-select wide form-control" id="validationCustom05">
                                                    <option data-display="Select">Tür seçiniz</option>

                                                    <option value="Masa">Masa</option>
                                                    <option value="Ürün">Ürün</option>
                                                    <option value="Menü">Menü</option>

                                                </select>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn me-2 btn-primary">Gönder</button>
                                        <button type="submit" class="btn btn-danger light">İptal Etmek</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        </form>
    </div>
</div>




